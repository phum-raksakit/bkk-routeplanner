<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/lightBlue"
    app:cardCornerRadius="10dp"
    app:contentPadding="20dp"
    app:contentPaddingTop="20dp"
    app:contentPaddingBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Plan Details example -->
        <TextView
            android:id="@+id/PlanName"
            style="@style/Text.SubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Plan 1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/DateOfPlan"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="20 OCT 2024"
            app:layout_constraintTop_toBottomOf="@id/PlanName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/NumOfPlace"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="13 Places"
            app:layout_constraintTop_toBottomOf="@id/DateOfPlan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Place1"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Suan Luang Rama IX,"
            app:layout_constraintTop_toBottomOf="@id/NumOfPlace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Place2"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Dusit Palace, ..."
            app:layout_constraintTop_toBottomOf="@id/Place1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Edit Button -->
        <!--
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonEditPlan"
            android:contentDescription="@string/editPlanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_edit"
            app:backgroundTint="@color/darkBlue"
            app:tint="@color/lightBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>